# Makefile for compiling LaTeX documents using pdflatex

# Name of the LaTeX file without the extension
TEXFILE = main

# Default rule to compile the LaTeX document
all: $(TEXFILE).pdf

# Rule to compile the LaTeX file to PDF using pdflatex
$(TEXFILE).pdf: $(TEXFILE).tex
	pdflatex $(TEXFILE).tex

# Clean up auxiliary files generated during compilation
clean:
	del *.aux *.log *.toc *.out

# Remove all files generated by LaTeX (including the PDF)
cleanall:
	del *.aux *.log *.toc *.out *.pdf

# Open the PDF file after compiling (adjust this depending on your viewer)
view: $(TEXFILE).pdf
	start $(TEXFILE).pdf

# Phony targets to avoid conflicts with file names
.PHONY: all clean cleanall view